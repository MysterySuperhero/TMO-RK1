<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.mysterysuperhero.tmork1.fragments.InputParamsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/n_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="number"
            android:tag="n"
            android:hint="@string/n"/>

        <EditText
            android:id="@+id/k_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="number"
            android:tag="k"
            android:hint="@string/k"/>


        <EditText
            android:id="@+id/alpha_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="numberDecimal"
            android:tag="alpha"
            android:hint="@string/alpha"/>

        <EditText
            android:id="@+id/lambda_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="numberDecimal"
            android:tag="lambda"
            android:hint="@string/lambda"/>

        <EditText
            android:id="@+id/mu_param_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="numberDecimal"
            android:tag="mu"
            android:hint="@string/mu"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Далее"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


</FrameLayout>
